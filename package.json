{
  "name": "youtube-summaries",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@repo/web",
    "dev:api": "turbo run dev --filter=@repo/api",
    "dev:worker": "turbo run dev --filter=@repo/worker",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@repo/web",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:api": "turbo run test --filter=@repo/api",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
